#!/bin/bash

echo "start of configuration"
echo "config i3"
cp i3-config ~/.config/i3/config
echo "config polybar"
cp polybar-config ~/.config/polybar/config
echo "dossier start"
cp -r start/ ~/
echo "xinitrc"
cp xinitrc ~/.xinitrc

if [  -s ~/start/pacwall/ ]
then	
	echo "pacwall already present"
else 
	echo "Download pacwall"
	cd ~/start/
	git clone https://github.com/Kharacternyk/pacwall.git
fi

echo "END"

